generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator jsonSchema {
  provider = "prisma-json-schema-generator"
  output   = "."
}

model app_user {
  id            Int             @id @default(autoincrement())
  email         String
  name          String?
  group_id      Int?
  created_at    DateTime?
  updated_at    DateTime?
  deleted_at    DateTime?
  group         app_user_group? @relation(fields: [group_id], references: [id])
  cms_site_page cms_site_page[]
}

model app_user_group {
  id          Int        @id @default(autoincrement())
  name        String?
  permissions String?
  created_at  DateTime?
  updated_at  DateTime?
  deleted_at  DateTime?
  users       app_user[]
}

model cms_site {
  id      Int             @id @default(autoincrement())
  name    String?
  address String?
  pages   cms_site_page[]
}

model cms_site_page {
  id         Int       @id @default(autoincrement())
  name       String?
  content    String?
  author_id  Int?
  site_id    Int?
  published  Boolean   @default(false)
  created_at DateTime?
  updated_at DateTime?
  deleted_at DateTime?
  author     app_user? @relation(fields: [author_id], references: [id])
  site       cms_site? @relation(fields: [site_id], references: [id])
}
