generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model app_user {
  id             Int             @id @default(autoincrement())
  name           String?
  email          String?
  password       String?
  group_id       Int?
  created_at     DateTime        @default(now())
  updated_at     DateTime        @updatedAt
  app_user_group app_user_group? @relation(fields: [group_id], references: [id])
}

model app_user_group {
  id          Int        @id @default(autoincrement())
  name        String?
  permissions String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  app_user    app_user[]
}

model app_config {
  id         Int      @id @default(autoincrement())
  name       String?
  value      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model app_file {
  id         Int      @id @default(autoincrement())
  name       String?
  mime       String?
  size       String?
  path       String?
  content    String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model app_address {
  id           Int      @id @default(autoincrement())
  name         String?
  route        String?
  number       String?
  complement   String?
  zipcode      String?
  district     String?
  city         String?
  city_code    String?
  state        String?
  state_code   String?
  country      String?
  country_code String?
  lat          Float?
  lng          Float?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}
